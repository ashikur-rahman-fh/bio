{
  "extends": "next/core-web-vitals",
  "rules": {
      "semi": ["error", "always"],
      "quotes": ["error", "double", { "avoidEscape": true }],
      "indent": ["error", 2],
      "eqeqeq": ["error", "always"],
      "no-var": ["error"],
      "no-unused-vars": ["error"],
      "eol-last": ["error", "always"],
      "no-trailing-spaces": ["error"],
      "max-len": [ "error", { "code": 80 }]
  }
}
